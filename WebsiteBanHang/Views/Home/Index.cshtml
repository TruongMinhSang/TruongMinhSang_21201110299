<div></div>




<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6 mb-5">
                <h2 class="section-title-underline mb-3">
                    <span>Sản phẩm phổ biến</span>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-slide-3 owl-carousel">
                    @foreach (var item in Model.ListProduct)
                    {
                        <div class="course-1-item">
                            <figure class="thumnail">
                                <a href="@Url.Action("Detail", "Product", new { @id = item.Id })"><img src="~/Content/images/@item.Avatar" height="280" width="150" ></a>
                                <div class="price">@item.Price$</div>
                                <div class="category"><h3>@item.Name</h3></div>
                            </figure>
                            <div class="course-1-content pb-4">
                                <p><a href="course-single.html" class="btn btn-primary rounded-0 px-4">Thêm vào giỏ hàng</a></p>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>






<div class="site-section ftco-subscribe-1" style="background-image: url('~/Content/images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h2>Subscribe to us!</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia,</p>
            </div>
            <div class="col-lg-5">
                <form action="" class="d-flex">
                    <input type="text" class="rounded form-control mr-2 py-3" placeholder="Enter your email">
                    <button class="btn btn-primary rounded py-3 px-4" type="submit">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>